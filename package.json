{
  "name": "hyperscaler-services",
  "type": "module",
  "version": "0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "bun run cf-typegen && astro build",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "deploy": "bun run lint:fix && astro build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "format": "prettier --write .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "typecheck": "bun run cf-typegen && bun tsgo --noEmit"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/tailwind": "^6.0.2",
    "@iconify-json/mdi": "^1.2.3",
    "@tailwindcss/vite": "^4.1.17",
    "astro": "^5.15.5",
    "astro-icon": "^1.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251112.1",
    "oxlint": "^1.28.0",
    "tailwindcss": "^4.1.17",
    "wrangler": "^4.47.0"
  }
}
