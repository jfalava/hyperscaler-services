---
interface Props {
  currentLang: 'en' | 'es';
  variant?: 'mobile' | 'desktop';
}

const { currentLang, variant = 'desktop' } = Astro.props;
---

{variant === 'mobile' ? (
  <div class="inline-flex items-center rounded-full bg-gray-100/95 dark:bg-gray-800/95 px-2 py-0.5 text-[10px] shadow-sm">
    <a
      href="/?lang=en"
      class={`px-2 py-0.5 rounded-full font-medium transition-colors ${
        currentLang === 'en'
          ? 'bg-blue-600 text-white'
          : 'text-gray-700 dark:text-gray-200'
      }`}
    >
      EN
    </a>
    <a
      href="/?lang=es"
      class={`px-2 py-0.5 rounded-full font-medium transition-colors ${
        currentLang === 'es'
          ? 'bg-blue-600 text-white'
          : 'text-gray-700 dark:text-gray-200'
      }`}
    >
      ES
    </a>
  </div>
) : (
  <div class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-1 py-0.5 text-xs sm:text-sm">
    <a
      href="/?lang=en"
      class={`px-3 py-1 rounded-full font-medium transition-colors ${
        currentLang === 'en'
          ? 'bg-blue-600 text-white shadow-sm'
          : 'text-gray-700 dark:text-gray-200'
      }`}
    >
      EN
    </a>
    <a
      href="/?lang=es"
      class={`px-3 py-1 rounded-full font-medium transition-colors ${
        currentLang === 'es'
          ? 'bg-blue-600 text-white shadow-sm'
          : 'text-gray-700 dark:text-gray-200'
      }`}
    >
      ES
    </a>
  </div>
)}